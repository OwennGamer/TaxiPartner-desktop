<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nr szkody:"/>

        <EditText
            android:id="@+id/editDamageNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="np. 123/2024"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Opis:"/>

        <EditText
            android:id="@+id/editDamageDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opis szkody"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Status:"/>

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSelectPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Dodaj zdjęcia"/>

        <TextView
            android:id="@+id/tvPhotosCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Brak zdjęć"/>

        <Button
            android:id="@+id/btnSaveDamage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Zapisz szkodę"/>

    </LinearLayout>
</ScrollView>