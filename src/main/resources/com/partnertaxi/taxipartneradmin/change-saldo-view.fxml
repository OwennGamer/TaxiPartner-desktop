<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.partnertaxi.taxipartneradmin.ChangeSaldoController">

    <Label text="Zmiana salda" styleClass="font-20" />

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Saldo" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="saldoField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="np. -100 lub 200" />

        <Label text="Vouchery (aktualny)" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="voucherCurrentField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="np. 150" />

        <Label text="Vouchery (poprzedni)" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="voucherPreviousField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="np. -50" />
    </GridPane>

    <ComboBox fx:id="reasonBox" promptText="Wybierz powód">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Rozliczenie" />
                <String fx:value="Kara" />
                <String fx:value="Premia" />
                <String fx:value="Inny" />
            </FXCollections>
        </items>
    </ComboBox>

    <TextField fx:id="customReasonField" promptText="Opisz powód (jeśli 'Inny')" visible="false" />

    <HBox spacing="10">
        <Button text="Zapisz" onAction="#handleSave" />
        <Button text="Anuluj" onAction="#handleCancel" />
    </HBox>

</VBox>
