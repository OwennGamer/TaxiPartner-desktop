<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.partnertaxi.taxipartneradmin.VehicleDamageController"
            prefWidth="600" prefHeight="400">
    <top>
        <Label text="Szkody pojazdu" style="-fx-padding: 10;" styleClass="font-16"/>
    </top>
    <center>
        <TableView fx:id="damageTable">
            <columns>
                <TableColumn fx:id="colNrSzkody" id="colNrSzkody" text="Nr szkody" prefWidth="100"/>
                <TableColumn fx:id="colStatus" id="colStatus" text="Status" prefWidth="100"/>
                <TableColumn fx:id="colData" id="colData" text="Data" prefWidth="120"/>
                <TableColumn fx:id="colOpis" id="colOpis" text="Opis" prefWidth="200"/>
                <TableColumn fx:id="colZdjecia" id="colZdjecia" text="Zdjęcia" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addDamageButton" text="Dodaj szkodę" onAction="#onAddDamage"/>
            <Button fx:id="editDamageButton" text="Edytuj" onAction="#onEditDamage"/>
        </HBox>
    </bottom>
</BorderPane>
