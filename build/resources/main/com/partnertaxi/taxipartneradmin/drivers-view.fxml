<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.partnertaxi.taxipartneradmin.DriversController"
            prefWidth="900" prefHeight="600">
    <stylesheets>
        <URL value="@drivers-view.css" />
    </stylesheets>

    <top>
        <ToolBar>
            <Button text="Dodaj kierowcę" fx:id="addButton" onAction="#handleAddDriver"/>
            <Button text="Edytuj kierowcę" fx:id="editButton" onAction="#handleEditDriver"/>
            <Button text="Usuń kierowcę" fx:id="deleteButton" onAction="#handleDeleteDriver"/>
            <Button text="Zmień saldo" onAction="#handleChangeSaldo"/>
            <Button text="Historia" onAction="#handleShowHistory"/>
            <Button text="Tankowania" fx:id="refuelsButton" onAction="#handleShowRefuels"/>
            <Button text="Czas pracy" onAction="#handleShowWork"/>
            <Button text="Flota" onAction="#openFleetView"/>
            <Button text="Pracownicy" onAction="#openEmployeesView"/>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Zakres dat:" />
            <ComboBox fx:id="dateFilterCombo" prefWidth="180" />
            <HBox fx:id="customRangeBox" alignment="CENTER_LEFT" spacing="5">
                <DatePicker fx:id="startDatePicker" promptText="Od" />
                <Label text="–" />
                <DatePicker fx:id="endDatePicker" promptText="Do" />
            </HBox>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Lista kierowców" styleClass="font-24"/>
            <TableView fx:id="driversTable" prefWidth="860" prefHeight="450" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn"                id="idColumn"                text="ID"               prefWidth="100"/>
                    <TableColumn fx:id="nameColumn"              id="nameColumn"              text="Imię i nazwisko"  prefWidth="150"/>
                    <TableColumn fx:id="saldoColumn"             id="saldoColumn"             text="Saldo"            prefWidth="100"/>
                    <TableColumn fx:id="statusColumn"            id="statusColumn"            text="Status"           prefWidth="100"/>
                    <TableColumn fx:id="vehiclePlateColumn"      id="vehiclePlateColumn"      text="Samochód"         prefWidth="120"/>
                    <TableColumn fx:id="fuelCostColumn"          id="fuelCostColumn"          text="Koszt paliwa"     prefWidth="100"/>
                    <TableColumn fx:id="fuelCostSumColumn"       id="fuelCostSumColumn"       text="Suma paliwa"      prefWidth="100"/>
                    <TableColumn fx:id="percentTurnoverColumn"   id="percentTurnoverColumn"   text="Procent obrotu"   prefWidth="100"/>
                    <TableColumn fx:id="cardCommissionColumn"    id="cardCommissionColumn"    text="Prowizja za kartę" prefWidth="100"/>
                    <TableColumn fx:id="partnerCommissionColumn" id="partnerCommissionColumn" text="Prowizja partner" prefWidth="100"/>
                    <TableColumn fx:id="boltCommissionColumn"    id="boltCommissionColumn"    text="Prowizja Bolt"     prefWidth="100"/>
                    <TableColumn fx:id="settlementLimitColumn"   id="settlementLimitColumn"   text="Graniczna kwota"   prefWidth="120"/>
                    <TableColumn fx:id="voucherCurrentColumn"    id="voucherCurrentColumn"    text="Vouchery (aktualny)" prefWidth="130"/>
                    <TableColumn fx:id="voucherPreviousColumn"   id="voucherPreviousColumn"   text="Vouchery (poprzedni)" prefWidth="140"/>
                    <TableColumn fx:id="cardColumn"              id="cardColumn"              text="Karta"             prefWidth="100"/>
                    <TableColumn fx:id="cashColumn"              id="cashColumn"              text="Gotówka"           prefWidth="100"/>
                    <TableColumn fx:id="lotColumn"               id="lotColumn"               text="LOT"               prefWidth="100"/>
                    <TableColumn fx:id="turnoverColumn"          id="turnoverColumn"          text="Obrót"            prefWidth="100"/>
                    <TableColumn fx:id="zlPerKmColumn"          id="zlPerKmColumn"          text="ZŁ / KM"          prefWidth="100"/>
                    <TableColumn fx:id="fuelPerTurnoverColumn"  id="fuelPerTurnoverColumn"  text="PALIWO / OBRÓT"   prefWidth="120"/>
                    <TableColumn fx:id="createdAtColumn"         id="createdAtColumn"         text="Dodano"           prefWidth="150"/>
                    <TableColumn fx:id="logoutColumn"           id="logoutColumn"           text="Wyloguj"          prefWidth="100"/>
                </columns>
            </TableView>
            <HBox fx:id="summaryRow" id="summaryRow" spacing="0" alignment="CENTER_LEFT">
                <children>
                    <StackPane fx:id="idPlaceholder" id="idPlaceholder" styleClass="summary-cell summary-cell-left" />
                    <StackPane fx:id="namePlaceholder" id="namePlaceholder" styleClass="summary-cell summary-cell-left">
                        <Label fx:id="nameSummaryLabel" text="SUMA" />
                    </StackPane>
                    <StackPane fx:id="saldoSumContainer" id="saldoSumLabel" styleClass="summary-cell">
                        <Label fx:id="saldoSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="statusPlaceholder" id="statusPlaceholder" styleClass="summary-cell summary-cell-left" />
                    <StackPane fx:id="vehiclePlatePlaceholder" id="vehiclePlatePlaceholder" styleClass="summary-cell summary-cell-left" />
                    <StackPane fx:id="fuelCostPlaceholder" id="fuelCostPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="fuelSumContainer" id="fuelSumLabel" styleClass="summary-cell">
                        <Label fx:id="fuelSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="percentTurnoverPlaceholder" id="percentTurnoverPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="cardCommissionPlaceholder" id="cardCommissionPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="partnerCommissionPlaceholder" id="partnerCommissionPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="boltCommissionPlaceholder" id="boltCommissionPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="settlementLimitPlaceholder" id="settlementLimitPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="voucherCurrentContainer" id="voucherCurrentSumLabel" styleClass="summary-cell">
                        <Label fx:id="voucherCurrentSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="voucherPreviousContainer" id="voucherPreviousSumLabel" styleClass="summary-cell">
                        <Label fx:id="voucherPreviousSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="cardSumContainer" id="cardSumLabel" styleClass="summary-cell">
                        <Label fx:id="cardSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="cashSumContainer" id="cashSumLabel" styleClass="summary-cell">
                        <Label fx:id="cashSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="lotSumContainer" id="lotSumLabel" styleClass="summary-cell">
                        <Label fx:id="lotSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="turnoverSumContainer" id="turnoverSumLabel" styleClass="summary-cell">
                        <Label fx:id="turnoverSumValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="zlPerKmAvgContainer" id="zlPerKmAvgLabel" styleClass="summary-cell">
                        <Label fx:id="zlPerKmAvgValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="fuelPerTurnoverAvgContainer" id="fuelPerTurnoverAvgLabel" styleClass="summary-cell">
                        <Label fx:id="fuelPerTurnoverAvgValue" text="0,00" />
                    </StackPane>
                    <StackPane fx:id="createdAtPlaceholder" id="createdAtPlaceholder" styleClass="summary-cell" />
                    <StackPane fx:id="logoutPlaceholder" id="logoutColumn" styleClass="summary-cell" />
                </children>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox alignment="CENTER">
                <Button text="Odśwież" fx:id="refreshButton" onAction="#handleRefreshDrivers"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
